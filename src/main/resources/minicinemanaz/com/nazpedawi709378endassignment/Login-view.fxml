<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
      <Label text="Fantastic Cinema Login">
         <font>
            <Font name="Verdana Pro Semibold" size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <GridPane alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="177.0" minWidth="10.0" prefWidth="174.66666666666669" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="58.3333257039388" minHeight="10.0" prefHeight="27.999999046325684" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="57.33333333333334" minHeight="10.0" prefHeight="32.000000953674316" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="38.3333257039388" minHeight="10.0" prefHeight="26.999999999999993" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="47.33333333333334" minHeight="10.0" prefHeight="38.33333333333334" vgrow="SOMETIMES" />
        </rowConstraints>
            <Label text="Username" GridPane.vgrow="NEVER">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
             <TextField fx:id="usernameField" style="-fx-border-color: black; -fx-border-width: 1px;" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" />
               </GridPane.margin></TextField>
            <Label text="Password" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <PasswordField fx:id="passwordField" style="-fx-border-color: black; -fx-border-width: 1px;" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets bottom="10.0" />
               </GridPane.margin></PasswordField>
      </GridPane>
      <Label fx:id="errorLabel" opacity="0.0" style="-fx-text-fill: red;">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="40" prefWidth="150" style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-background-radius: 5px;" text="Login" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
</VBox>
